# ============================================================================
# AI Wingman - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git!

# Database Configuration
# ----------------------------------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://wingman:dev_password@localhost:5433/ai_wingman

# Alternative format for different tools
POSTGRES_USER=wingman
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=ai_wingman
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Embedding Model Configuration
# ----------------------------------------------------------------------------
# Model for generating vector embeddings
# Options: sentence-transformers/all-MiniLM-L6-v2 (fast, 384-dim)
#          sentence-transformers/all-mpnet-base-v2 (better quality, 768-dim)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# LLM Configuration (Ollama)
# ----------------------------------------------------------------------------
# Ollama API endpoint (local or remote)
OLLAMA_BASE_URL=http://localhost:11434

# Model to use for response generation
# Options: phi3, mistral, llama2, gemma
OLLAMA_MODEL=phi3

# Ollama settings
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=500

# Slack API Configuration
# ----------------------------------------------------------------------------
# Get these from: https://api.slack.com/apps
# 1. Create a Slack app
# 2. Install to your workspace
# 3. Copy tokens from OAuth & Permissions

SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here

# Slack workspace ID (optional, for validation)
SLACK_WORKSPACE_ID=

# Application Settings
# ----------------------------------------------------------------------------
# Enable debug logging
DEBUG=True

# Number of similar contexts to retrieve for RAG
TOP_K_RESULTS=5

# Minimum similarity score for context retrieval (0.0 to 1.0)
MIN_SIMILARITY_SCORE=0.7

# Application Environment
# Values: development, staging, production
APP_ENV=development

# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location (leave empty for stdout only)
LOG_FILE=

# Data Storage Paths
# ----------------------------------------------------------------------------
# Local data directories
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
